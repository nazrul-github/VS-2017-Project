@using MvcPractice_1.Models
@model MvcPractice_1.Models.Employee

@{
    ViewBag.Title = "Employee Details";
}

<h2>Employee Details</h2>
<table style="font-family: Arial, Helvetica, sans-serif;">
    <tr>
        <th>
            Employee Id:
        </th>
        <td>
            @Model.EmployeeId
        </td>
    </tr>
    <tr>
        <th>
            Name:
        </th>
        <td>
            @Model.Name
        </td>
    </tr>
    <tr>
        <th>
            Salary:
        </th>
        <td>
            @Model.Salary
        </td>
    </tr>   <tr>
        <th>
            Gender:
        </th>
        <td>
            @Model.Gender
        </td>
    </tr>
</table>
<div>
    @Html.ActionLink("Go Back To the Employee","Index",new { departmentId = @Model.DepartmentId})
</div>

